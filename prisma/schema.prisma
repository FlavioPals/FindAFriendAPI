generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id           String  @id @default(uuid())
  name         String?
  description  String?
  age          String?
  size         String
  energy_level String?
  org_id       String

  org Org @relation(fields: [org_id], references: [id])

  @@map("pets")
}

model Org {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  whatsapp String
  password String
  state    String
  city     String
  pets     Pet[]

  @@map("orgs")
}
